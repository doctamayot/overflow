<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="question__header">
      <h2>Actualizar Respuesta</h2>
    </div>
    <div class="question__form">
      <%= form_with model: @answer, url: question_answer_path(@answer.question, @answer), local: true do |f| %>
        <%= render 'shared/error_messages', model: @answer %>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 10, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= link_to "Cancelar", question_path(@answer.question.id), class: "btn btn-default" %>
          <%= f.submit "Actualizar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
